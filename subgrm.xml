<?xml version= "1.0" encoding="UTF-8" ?>

<grammar xmlns="http://www.w3.org/2001/06/grammar"
        xml:lang="en-US">

<rule id = "CROP_WEATHER" scope="public">
	<one-of>
		<item>
			<item> <ruleref uri = "#CROP"/> <tag> out.crop = rules.CROP.crop </tag> </item>
			<item> <ruleref uri = "#WEATHER"/> <tag> out.condition = rules.WEATHER.condition </tag> </item>
		</item>
		<item>
			<ruleref uri = "#CROP"/>
		</item>
		<item>
		<ruleref uri = "#WEATHER"/>
	</item>
</one-of>
</rule>


<rule id = "CROP" scope = "public">
	<one-of>
		<item>
			<item repeat = "0-1">
			<ruleref uri = "FILL_CROP"/>
		</item>
		</item>
		<one-of>
			<item> coco <tag> out.crop = "Coco"; </tag> </item>
			<item> pumpkin <tag> out.crop = "Pumpkin"; </tag> </item>
			<item> rice <tag> out.crop = "Rice"; </tag> </item>
			</one-of>
		</one-of>
	</rule>


<rule id = "WEATHER" scope = "public">
	<one-of>
		<item>
			<item repeat = "0-1">
			<ruleref uri = "FILL_COND"/>
		</item>
		</item>
	<one-of>
		<item>
			<one-of>
		<item> rainy</item>
		<item> rain </item>
		<item> raining</item>
		<tag> out.condition = "rain"; </tag>
		</one-of>
	</item>
		<item>
			<one-of>
				<item> hot </item>
				<item> sunny </item>
				<item> scalding </item>
				<item> burning </item>
				<tag> out.condition = "dry"; </tag>
			</one-of>
		</item>
		<item>
				<one-of> 
					<item> wet </item>
					<item> heavy </item>
					<item> steamy </item>
					<item> humid </item>
					<tag> out.condition = "humid"; </tag>
					</one-of>
					</item>
				</one-of>
			</one-of>
		</rule>
		<rule id = "FILL_CROP" scope = "public">
			<one-of>
					<item> I am harvesting </item>
					<item> My crop is </item>
					<item> What is the best fertilizer for </item>
					<item> I want to know the best fertilizer for </item>
					<item> Give me the fertilizer for </item>
					<item> Tell me the best fertilizer for </item>
				</one-of>
			</rule>

			<rule id = "FILL_COND" scope = "public">
				<one-of>
					<item> under </item>
					<item> and the weather is </item>
					<item> and the condition is </item>
					<item> in </item>
					<item> and it is </item>
				</one-of>
			</rule>
</grammar>




